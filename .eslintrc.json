{
	"root": true,
	"extends": [
	  "eslint:recommended",
	  "plugin:import/errors",
	  "plugin:import/warnings"
	],
	"parserOptions": {
	  "ecmaVersion": 7,
	  "sourceType": "module"
	},
	"env": {
	  "browser": true,
	  "node": true,
	  "mocha": true
	},
	"rules": {
		"no-console": 1,
		"indent": [2, "tab"],
		"keyword-spacing": 2,
		"complexity": 2,
		"default-case": 2,
		"guard-for-in": 2,
		"no-empty-function": 1,
		"no-eval": 2,
		"no-sequences": 2,
		"no-unused-expressions": 2,
		"vars-on-top": 2,
		"no-use-before-define": 2,
		"array-bracket-spacing": 2,
		"block-spacing": 2,
		"brace-style": [2, "stroustrup"],
		"comma-dangle": 2,
		"comma-style": 2,
		"computed-property-spacing": 2,
		"no-trailing-spaces": 2,
		"no-unneeded-ternary": 2,
		"no-whitespace-before-property": 2,
		"sort-keys": 2,
		"sort-vars": 2,
		"space-before-function-paren": 2,
		"space-in-parens": 2,
		"spaced-comment": 1
	}
}
